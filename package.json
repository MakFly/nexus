{
  "name": "nexus",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "bun run build:packages && bun run build:apps",
    "build:packages": "bun run --filter './packages/*' build",
    "build:apps": "bun run --filter './apps/*' build",
    "test": "bun run test:packages && bun run test:apps",
    "test:packages": "bun run --filter './packages/*' test",
    "test:apps": "bun run --filter './apps/*' test",
    "lint": "bun run lint:packages && bun run lint:apps",
    "lint:packages": "bun run --filter './packages/*' lint",
    "lint:apps": "bun run --filter './apps/*' lint",
    "clean": "rm -rf node_modules **/node_modules **/dist"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "chokidar": "^5.0.0"
  }
}

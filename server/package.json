{
  "name": "free-context-mcp-server",
  "version": "0.1.0",
  "description": "Model Context Protocol server for context and memory management with full-text search and auto-memoization",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "free-context-mcp": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun && bun build src/cli.ts --outfile ./dist/cli.js --target bun",
    "build:types": "tsc --emitDeclarationOnly",
    "prepublishOnly": "bun run build",
    "start": "bun dist/index.js",
    "test": "bun test",
    "test:unit": "bun test test/search-first.test.ts",
    "test:mcp": "bun test test/mcp.test.ts",
    "test:mgrep": "bun test test/mgrep.test.ts",
    "test:all": "bun test test/",
    "diagnose:automemoize": "bun scripts/test-automemoize.ts",
    "diagnose:tokens": "bun scripts/test-token-usage.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "api:dev": "SERVER_MODE=API bun --watch src/index.ts",
    "api:start": "SERVER_MODE=API bun src/index.ts",
    "server:start": "./scripts/shell/restart-mcp.sh",
    "server:stop": "./scripts/shell/stop-mcp.sh",
    "logs:rotate": "./scripts/shell/rotate-logs.sh",
    "logs:install": "./scripts/shell/install-logrotate.sh",
    "mcp": "SERVER_MODE=MCP bun src/index.ts",
    "both": "SERVER_MODE=BOTH bun src/index.ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "context-management",
    "memory",
    "search",
    "sqlite",
    "fts5",
    "memoization",
    "claude"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/free-context.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/free-context/issues"
  },
  "homepage": "https://github.com/yourusername/free-context#readme",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.11.5",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "cmdk": "^1.1.1",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "eventemitter3": "^5.0.1",
    "hono": "^4.11.3",
    "zod": "^4.3.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
